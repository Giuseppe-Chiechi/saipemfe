@page "/user-info"
@using SaipemE_PTW.Authentication.Mock
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject AuthenticationStateProvider AuthStateProvider

@* 2025-01-15 - Mock Auth - Pagina per visualizzare informazioni dettagliate sull'utente autenticato *@
@* Utile per verificare che tutti i claims siano stati configurati correttamente *@

<PageTitle>Informazioni Utente - e-PTW</PageTitle>

<div class="container mt-4">
    <div class="row">
   <div class="col-12">
       <div class="d-flex justify-content-between align-items-center mb-4">
         <h2>
  <i class="bi bi-person-badge me-2"></i>
     Informazioni Utente
    </h2>
     @if (MockAuthConfig.UseMockAuthentication)
       {
   <span class="badge bg-warning text-dark fs-6">
   <i class="bi bi-exclamation-triangle me-1"></i>
Modalità Mock
    </span>
      }
       </div>
 </div>
    </div>

    @if (_authState != null && _authState.User.Identity?.IsAuthenticated == true)
    {
    <div class="row g-4">
     @* 2025-01-15 - Mock Auth - Card con informazioni base dell'utente *@
         <div class="col-md-6">
      <div class="card shadow-sm h-100">
     <div class="card-header bg-primary text-white">
         <h5 class="mb-0">
     <i class="bi bi-person-circle me-2"></i>
Dati Personali
  </h5>
  </div>
     <div class="card-body">
     <table class="table table-borderless">
    <tbody>
         <tr>
         <th class="text-muted" style="width: 40%;">Nome Completo:</th>
        <td><strong>@_authState.User.Identity.Name</strong></td>
          </tr>
  <tr>
           <th class="text-muted">Email:</th>
           <td>@GetClaimValue("preferred_username")</td>
       </tr>
     <tr>
     <th class="text-muted">ID Utente (sub):</th>
     <td><code>@GetClaimValue(ClaimTypes.NameIdentifier)</code></td>
     </tr>
        <tr>
     <th class="text-muted">Object ID (oid):</th>
      <td><code>@GetClaimValue("oid")</code></td>
  </tr>
   <tr>
  <th class="text-muted">Tenant ID (tid):</th>
        <td><code>@GetClaimValue("tid")</code></td>
      </tr>
   </tbody>
                 </table>
          </div>
     </div>
         </div>

            @* 2025-01-15 - Mock Auth - Card con ruoli assegnati *@
    <div class="col-md-6">
    <div class="card shadow-sm h-100">
       <div class="card-header bg-success text-white">
            <h5 class="mb-0">
   <i class="bi bi-shield-check me-2"></i>
           Ruoli Assegnati
     </h5>
         </div>
  <div class="card-body">
   @{
      var roles = _authState.User.FindAll(ClaimTypes.Role).Select(c => c.Value).ToList();
  }
  @if (roles.Any())
           {
       <div class="list-group">
          @foreach (var role in roles)
          {
<div class="list-group-item d-flex justify-content-between align-items-center">
         <span>
      <i class="bi bi-check-circle-fill text-success me-2"></i>
             @AppRoles.RoleDescriptions.GetValueOrDefault(role, role)
       </span>
          <span class="badge bg-primary">@role</span>
     </div>
}
         </div>
   }
       else
         {
         <div class="alert alert-warning mb-0">
      <i class="bi bi-exclamation-triangle me-2"></i>
       Nessun ruolo assegnato
      </div>
    }
  </div>
    </div>
            </div>

    @* 2025-01-15 - Mock Auth - Card con gruppi *@
     <div class="col-md-6">
     <div class="card shadow-sm h-100">
     <div class="card-header bg-info text-white">
      <h5 class="mb-0">
               <i class="bi bi-people-fill me-2"></i>
   Gruppi di Appartenenza
   </h5>
    </div>
     <div class="card-body">
     @{
    var groups = _authState.User.FindAll("groups").Select(c => c.Value).ToList();
           }
       @if (groups.Any())
             {
       <ul class="list-group">
   @foreach (var group in groups)
        {
            <li class="list-group-item">
    <i class="bi bi-folder-fill text-info me-2"></i>
             <code>@group</code>
  </li>
          }
          </ul>
  }
      else
  {
    <div class="alert alert-info mb-0">
           <i class="bi bi-info-circle me-2"></i>
    Nessun gruppo assegnato
    </div>
            }
  </div>
 </div>
            </div>

   @* 2025-01-15 - Mock Auth - Card con tutti i claims *@
   <div class="col-md-6">
         <div class="card shadow-sm h-100">
        <div class="card-header bg-secondary text-white">
       <h5 class="mb-0">
    <i class="bi bi-list-check me-2"></i>
       Tutti i Claims
     </h5>
        </div>
 <div class="card-body">
       <div class="table-responsive">
      <table class="table table-sm table-hover">
   <thead>
       <tr>
             <th>Tipo</th>
      <th>Valore</th>
</tr>
          </thead>
      <tbody>
              @foreach (var claim in _authState.User.Claims.OrderBy(c => c.Type))
     {
    <tr>
     <td><small class="text-muted">@claim.Type</small></td>
         <td><code class="small">@claim.Value</code></td>
  </tr>
        }
         </tbody>
      </table>
       </div>
    </div>
           </div>
      </div>
   </div>

  @* 2025-01-15 - Mock Auth - Sezione di test autorizzazioni *@
        <div class="row mt-4">
  <div class="col-12">
     <div class="card shadow-sm">
             <div class="card-header bg-dark text-white">
      <h5 class="mb-0">
     <i class="bi bi-key-fill me-2"></i>
    Test Autorizzazioni per Ruolo
           </h5>
       </div>
       <div class="card-body">
          <div class="row g-3">
       @foreach (var role in AppRoles.AllRoles)
    {
     var hasRole = _authState.User.IsInRole(role);
         <div class="col-md-3">
   <div class="d-flex align-items-center gap-2">
       @if (hasRole)
        {
        <i class="bi bi-check-circle-fill text-success fs-5"></i>
                }
          else
           {
           <i class="bi bi-x-circle-fill text-danger fs-5"></i>
         }
  <span class="@(hasRole ? "fw-bold" : "text-muted")">
      @AppRoles.RoleDescriptions.GetValueOrDefault(role, role)
      </span>
       </div>
     </div>
       }
    </div>
              </div>
          </div>
    </div>
  </div>
    }
    else
    {
        <div class="alert alert-warning">
   <i class="bi bi-exclamation-triangle me-2"></i>
         Caricamento informazioni utente...
      </div>
    }
</div>

@code {
    // 2025-01-15 - Mock Auth - Stato di autenticazione corrente
    private AuthenticationState? _authState;

    // 2025-01-15 - Mock Auth - Inizializza il componente caricando lo stato di autenticazione
    protected override async Task OnInitializedAsync()
    {
        _authState = await AuthStateProvider.GetAuthenticationStateAsync();
    }

  // 2025-01-15 - Mock Auth - Helper per ottenere il valore di un claim
 private string GetClaimValue(string claimType)
    {
        return _authState?.User.FindFirst(claimType)?.Value ?? "N/A";
    }
}
