@* Data: 2025-10-08 - Componente multi-select con ricerca. Sicurezza: input sanitizzato, nessun HTML non sanificato, gestione eventi sicura *@
@typeparam TItem where TItem : notnull
@using Microsoft.AspNetCore.Components.Web

<div class="searchable-dropdown relative">
    <!-- Data: 2025-10-08 - Campo di ricerca con icona -->
    <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </div>
        <input type="text"
               class="form-input w-full pl-10 pr-10 @(IsOpen ? "ring-2 ring-indigo-500 border-indigo-500" : "")"
               placeholder="@Placeholder"
               value="@searchText"
               @oninput="OnSearchInput"
               @onfocus="HandleFocus"
               @onblur="HandleBlur"
               @onkeydown="HandleKeyDown"
               autocomplete="off" />

        <!-- Data: 2025-10-08 - Pulsante clear -->
        @if (!string.IsNullOrEmpty(searchText) || (SelectedValues?.Any() ?? false))
        {
            <button type="button"
                    class="absolute inset-y-0 right-0 pr-3 flex items-center"
                    @onclick="ClearSelection"
                    @onmousedown:preventDefault>
                <svg class="w-4 h-4 text-slate-400 hover:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        }
    </div>

    <!-- Data: 2025-10-08 - Menu dropdown -->
    @if (IsOpen)
    {
        <div class="dropdown-menu absolute z-50 w-full mt-1 bg-white border border-slate-200 rounded-lg shadow-lg max-h-60 overflow-auto"
             @onmousedown:preventDefault>
            @if (FilteredItems.Any())
            {
                @foreach (var item in FilteredItems)
                {
                    var displayText = GetDisplayText(item);
                    var isChecked = IsSelected(item);
                    var index = FilteredItems.IndexOf(item);

                    <label class="dropdown-item flex items-center justify-between px-3 py-2 cursor-pointer hover:bg-indigo-50 @(isChecked ? "bg-indigo-100" : "") @(index == highlightedIndex ? "bg-slate-50" : "")"
                           @onmousedown:preventDefault>
                        <div class="flex items-center space-x-2">
                            <input type="checkbox" class="form-checkbox" checked="@isChecked" @onchange="_ => Toggle(item)" />
                            <span class="text-sm text-slate-800 select-none">@displayText</span>
                        </div>
                        @if (isChecked)
                        {
                            <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        }
                    </label>
                }
            }
            else
            {
                <div class="p-3 text-sm text-slate-500 text-center">Nessun risultato trovato</div>
            }
        </div>
    }
</div>

@code {
    // Data: 2025-10-08 - Parametri componenti
    [Parameter, EditorRequired]
    public List<TItem> Items { get; set; } = new();

    [Parameter]
    public List<TItem> SelectedValues { get; set; } = new();

    [Parameter]
    public EventCallback<List<TItem>> SelectedValuesChanged { get; set; }

    [Parameter]
    public Func<TItem, string>? DisplayProperty { get; set; }

    [Parameter]
    public string Placeholder { get; set; } = "Cerca...";

    // Data: 2025-10-08 - Stato
    private string searchText = string.Empty;
    private bool IsOpen = false;
    private int highlightedIndex = -1;
    private List<TItem> FilteredItems => GetFilteredItems();

    protected override void OnParametersSet()
    {
        if (SelectedValues == null)
        {
            SelectedValues = new List<TItem>();
        }
    }

    // Data: 2025-10-08 - Ricerca sicura
    private List<TItem> GetFilteredItems()
    {
        if (Items == null || !Items.Any()) return new();
        if (string.IsNullOrWhiteSpace(searchText)) return Items.Take(100).ToList();
        var s = searchText.Trim().ToLowerInvariant();
        return Items.Where(i => GetDisplayText(i).ToLowerInvariant().Contains(s)).Take(100).ToList();
    }

    private string GetDisplayText(TItem? item)
    {
        if (item == null) return string.Empty;
        try
        {
            return DisplayProperty != null ? DisplayProperty(item) : item.ToString() ?? string.Empty;
        }
        catch
        {
            return item.ToString() ?? string.Empty;
        }
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? string.Empty;
        IsOpen = true;
        highlightedIndex = -1;
    }

    private void HandleFocus()
    {
        IsOpen = true;
        highlightedIndex = -1;
    }

    private void HandleBlur()
    {
        // Ritardo per permettere click sugli elementi
        Task.Delay(200).ContinueWith(_ =>
        {
            InvokeAsync(() =>
            {
                IsOpen = false;
                StateHasChanged();
            });
        });
    }

    private bool IsSelected(TItem item)
    {
        if (SelectedValues == null) return false;
        return SelectedValues.Contains(item);
    }

    private async Task Toggle(TItem item)
    {
        if (SelectedValues == null)
        {
            SelectedValues = new List<TItem>();
        }

        var exists = SelectedValues.Contains(item);
        if (exists)
        {
            SelectedValues = SelectedValues.Where(x => !EqualityComparer<TItem>.Default.Equals(x, item)).ToList();
        }
        else
        {
            // Evita duplicati
            SelectedValues = SelectedValues.Append(item).Distinct().ToList();
        }

        await SelectedValuesChanged.InvokeAsync(SelectedValues);
    }

    private async Task ClearSelection()
    {
        SelectedValues = new List<TItem>();
        searchText = string.Empty;
        highlightedIndex = -1;
        IsOpen = false;
        await SelectedValuesChanged.InvokeAsync(SelectedValues);
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (!IsOpen && (e.Key == "ArrowDown" || e.Key == "ArrowUp"))
        {
            IsOpen = true;
            return;
        }
        if (!IsOpen) return;

        switch (e.Key)
        {
            case "ArrowDown":
                highlightedIndex = Math.Min(highlightedIndex + 1, FilteredItems.Count - 1);
                break;
            case "ArrowUp":
                highlightedIndex = Math.Max(highlightedIndex - 1, 0);
                break;
            case "Enter":
                if (highlightedIndex >= 0 && highlightedIndex < FilteredItems.Count)
                {
                    await Toggle(FilteredItems[highlightedIndex]);
                }
                break;
            case "Escape":
                IsOpen = false;
                break;
        }
    }
}
